  <!-- CONTACT -->
  <section id="contact" class="section-pad pt-0">
    <div class="container">
      <div class="row g-4">
        <div class="col-lg-5">
          <div class="glass card p-4 h-100">
            <h4 class="fw-bold mb-2">Contact</h4>
            <p class="text-secondary mb-4">Send me a message. It will be saved to the backend.</p>

            <div class="contact-item">
              <i class="bi bi-github"></i>
              <div>
                <div class="small text-secondary">GitHub</div>
                <a target="_blank" rel="noreferrer" href="https://github.com/NekolusDrshKelvin">
                  github.com/NekolusDrshKelvin
                </a>
              </div>
            </div>

            <div class="contact-item">
              <i class="bi bi-envelope"></i>
              <div>
                <div class="small text-secondary">Gmail</div>
                <a href="mailto:ksett2024@gmail.com?subject=Portfolio%20Contact">ksett2024@gmail.com</a>
              </div>
            </div>

            <div class="contact-item border-0">
              <i class="bi bi-geo-alt"></i>
              <div>
                <div class="small text-secondary">Location</div>
                <div>Myanmar</div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-lg-7">
          <div class="glass card p-4">
            <h5 class="fw-semibold mb-3">Send a Message</h5>

            <form id="contactForm" novalidate>
              <div class="row g-3">
                <div class="col-md-6">
                  <label class="form-label">Name</label>
                  <input class="form-control" id="name" required minlength="2" placeholder="Your name">
                  <div class="invalid-feedback">Min 2 chars.</div>
                </div>

                <div class="col-md-6">
                  <label class="form-label">Email</label>
                  <input class="form-control" id="email" required type="email" placeholder="you@gmail.com">
                  <div class="invalid-feedback">Valid email required.</div>
                </div>

                <div class="col-12">
                  <label class="form-label">Message</label>
                  <textarea class="form-control" id="message" rows="5" required minlength="10"
                    placeholder="Tell me about your project..."></textarea>
                  <div class="invalid-feedback">Min 10 chars.</div>
                </div>

                <div class="col-12 d-flex flex-wrap align-items-center gap-2">
                  <button class="btn btn-primary rounded-pill px-4" type="submit">
                    <i class="bi bi-send me-2"></i> Send
                  </button>
                  <span class="small text-secondary" id="formStatus"></span>
                </div>
              </div>
            </form>
          </div>

          <div class="text-secondary small mt-3">
            Backend API: <code>https://profolio-serverapi.vercel.app</code>
          </div>
        </div>
      </div>
    </div>
